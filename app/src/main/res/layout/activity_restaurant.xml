<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.gb.a1100695733.RestaurantActivity"
    style="@style/Padding.Layout">


    <LinearLayout
        style="@style/Padding.Layout.Linear"
        android:layout_alignParentStart="true">

        <TextView
        android:id="@+id/restaurantTitle"
        style="@style/MyText.Large.Title"
        android:text="@string/select_restaurant"/>
<RelativeLayout style="@style/MySpinnerBackground"
    android:paddingTop="25dp">
    <Spinner
        android:id="@+id/spinnerRestaurants"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</RelativeLayout>
</LinearLayout>

    <ImageView
        android:id="@+id/restaurantLogo"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_weight="1"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        />

    <Button
        android:id="@+id/submitRestaurant"
        style="@style/MyButton.Submit"
        android:onClick="buttonClickHandler"
         />

</RelativeLayout>
